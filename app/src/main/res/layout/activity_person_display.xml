<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_person_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.ncrb.samapre.myapplication.PersonDisplay"
    android:orientation="vertical"
    android:weightSum="15">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:orientation="horizontal">

        <ImageButton
            android:paddingTop="15dp"
            android:id="@+id/btn_Back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_arrow"
            android:textAlignment="center"
            android:textColor="#3336FF"
            />

        <TextView
            android:id="@+id/txt_view_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Person Search Result"

            android:textColor="#3336FF"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            />
        <ImageButton
            android:paddingTop="15dp"
            android:id="@+id/btn_Next"
            android:visibility="invisible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/next"
            android:textAlignment="center"
            android:textColor="#3336FF"
            />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"

        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@android:color/darker_gray"
        android:padding="5dp"
        android:layout_weight="1"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/btnLay"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_height="wrap_content"
        android:layout_weight="0.4">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Person Name"
            android:textColor="#3336FF"
            android:textStyle="bold"
            />
        <TextView

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Alias"
            android:textColor="#3336FF"
            android:textStyle="bold"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Relation Type"
            android:textColor="#3336FF"
            android:textStyle="bold"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Relative Name"
            android:textColor="#3336FF"
            android:textStyle="bold"
            />


    </LinearLayout>

    <ListView
        android:id="@+id/list_person_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:layout_weight="10.6"
       >
    </ListView>
