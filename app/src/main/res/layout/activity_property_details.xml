<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_property_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ncrb.samapre.myapplication.PropertyDetails"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/pdfLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btn_Back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/back_arrow"
                    android:textAlignment="center"
                    android:textColor="#3336FF"
                    />
                <TextView
                    android:id="@+id/txt_view_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Automobile Search Details"
                    android:textColor="#3336FF"
                    android:background="#CACFD2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="#3336FF"
                    android:layout_weight="1"
                    android:text="Fir Registration No:"
                    android:background="@drawable/border"/>

                <TextView
                    android:id="@+id/txt_property_fir_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="#3336FF"
                    android:layout_weight="1"
                    android:text="Fir Registration Date:"
                    android:background="@drawable/border1"/>

                <TextView
                    android:id="@+id/txt_property_fir_regdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="#3336FF"
                    android:layout_weight="1"
                    android:text="Fir Act-Section:"
                    android:background="@drawable/border1"/>

                <TextView
                    android:id="@+id/txt_property_fir_actsec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textColor="#3336FF"
                    android:text="GD No:"
                    android:background="@drawable/border"/>

                <TextView
                    android:id="@+id/txt_property_GD_No"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border"
                    />
            </LinearLayout>


            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="#3336FF"
                    android:layout_weight="1"
                    android:text="Vehicle Type:"
                    android:background="@drawable/border1"/>
                <TextView
                    android:id="@+id/txt_vehicle_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border1"
                    />

            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textColor="#3336FF"
                    android:text="Vehicle Manufacturer:"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/txt_vehicle_Manu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border"
                    />

            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="#3336FF"
                    android:layout_weight="1"
                    android:text="Vehicle Model:"
                    android:background="@drawable/border1"/>
                <TextView
                    android:id="@+id/txt_vehicle_Model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border1"
                    />

            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="#3336FF"
                    android:layout_weight="1"
                    android:text="Vehicle Color:"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/txt_vehicle_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border"
                    />

            </LinearLayout>



            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textColor="#3336FF"
                    android:text="Owner Name:"
                    android:background="@drawable/border1"/>
                <TextView
                    android:id="@+id/txt_property_owner_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border1"
                    />

            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="#3336FF"
                    android:layout_weight="1"
                    android:text="Vehicle Reg No:"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/txt_REGISTRATION_NO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="#3336FF"
                    android:layout_weight="1"
                    android:text="Chassis No:"
                    android:background="@drawable/border1"/>
                <TextView
                    android:id="@+id/txt_CHASSIS_NO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border1"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textColor="#3336FF"
                    android:text="Engine No:"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/txt_ENGINE_NO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border"
                    />
            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textColor="#3336FF"
                    android:text="State:"
                    android:background="@drawable/border1"/>
                <TextView
                    android:id="@+id/txt_State"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border1"
                    />
            </LinearLayout>



            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#3336FF"
                    android:textSize="15dp"
                    android:text="District:"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/txt_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border"
                    />
            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="#3336FF"
                    android:layout_weight="1"
                    android:text="Police Station:"
                    android:background="@drawable/border1"/>
                <TextView
                    android:id="@+id/txt_ps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border1"
                    />
            </LinearLayout>



            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="#3336FF"
                    android:textSize="15dp"
                    android:text="Property Nature:"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/txt_propertyNature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textAlignment="viewStart"
                    android:background="@drawable/border"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/btn_view_fir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View FIR"
                />
            <Button
                android:id="@+id/btn_pdf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Save As pdf"/>


        </LinearLayout>


    </ScrollView>
</LinearLayout>
